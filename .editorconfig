# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.php]
indent_style = space
indent_size = 4

[*.{json,yml}]
indent_style = space
indent_size = 2

[*.{xml,xml.dist}]
max_line_length = off
indent_style = space
indent_size = 2
